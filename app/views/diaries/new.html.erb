<%= link_to 'ï¼œMy page', mypages_top_path %>
<%= form_with(model: @diary, local: true) do |form| %>
  <% if flash.now[:alert] %>
    <div class="alert alert-danger">
      <%= flash.now[:alert] %>
    </div>
  <% end %>

  <div class="title">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="time">
    <%= form.label :start_time %>
    <%= form.text_field :start_time, value: Time.current.in_time_zone('Tokyo').strftime("%Y-%m-%d %H:%M"), readonly: true %>
  </div>

  <div class="font-select-japanese">
    <%= form.label :japanese_font_name, 'Select Japanese Font' %>
    <%= form.select(
          :japanese_font_name,
          options_for_select(current_user.purchased_fonts.select { |f| f.language == 'Japanese' }.map { |f| [f.name, f.font_name] }, @diary.japanese_font_name),
          prompt: 'Choose a Japanese font'
    ) %>
  </div>

  <div class="content_japanese">
    <%= form.label :content_japanese, 'Contents (Japanese)', for: 'content_japanese' %>
    <%= form.text_area :content_japanese, rows: 5, cols: 50, style: "width: 100%;", id: "content_japanese" %>
  </div>

  <div class="font-select-english">
    <%= form.label :english_font_name, 'Select English Font' %>
    <%= form.select(
          :english_font_name,
          options_for_select(current_user.purchased_fonts.select { |f| f.language == 'English' }.map { |f| [f.name, f.font_name] }, @diary.english_font_name),
          prompt: 'Choose an English font'
    ) %>
  </div>
  
  <div class="content_english">
    <%= form.label :content_english, 'Contents (English)', for: 'content_english' %>
    <%= form.text_area :content_english, rows: 5, cols: 50, style: "width: 100%;", id: "content_english" %>
  </div>

  <div>
    <%= form.submit "Create diary" %>
    <button type="button" id="translate-button">Translate</button>
  </div>
<% end %>

<script>
document.getElementById('translate-button').addEventListener('click', function() {
  const contentJapanese = document.getElementById('content_japanese').value;

  fetch('<%= translate_diaries_path %>', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
      'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content
    },
    body: JSON.stringify({ content_japanese: contentJapanese })
  })
  .then(response => {
    if (!response.ok) {
      throw new Error('Translation failed');
    }
    return response.json();
  })
  .then(data => {
    document.getElementById('content_english').value = data.translation;
  })
  .catch(error => {
    alert(error.message);
  });
});

document.querySelector('[name="diary[japanese_font_name]"]').addEventListener('change', function(event) {
  const selectedJapaneseFont = event.target.value;
  document.documentElement.style.setProperty('--japanese-font', selectedJapaneseFont);
});

document.querySelector('[name="diary[english_font_name]"]').addEventListener('change', function(event) {
  const selectedEnglishFont = event.target.value;
  document.documentElement.style.setProperty('--english-font', selectedEnglishFont);
});
</script>
