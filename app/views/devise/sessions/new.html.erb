<h2 class="login-title"><%= t('devise.sessions.new.title') %></h2>

<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<div class="login-card">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>

    <div class="form-group">
      <%= f.label :email, t('devise.sessions.new.email'), class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="form-group">
      <%= f.label :password, t('devise.sessions.new.password'), class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group remember-me">
        <%= f.check_box :remember_me, class: "remember-checkbox" %>
        <%= f.label :remember_me, t('devise.sessions.new.remember_me'), class: "remember-label" %>
      </div>
    <% end %>

    <div class="form-actions">
      <%= f.submit t('devise.sessions.new.submit'), class: "login-button" %>
    </div>

  <% end %>

  <div class="login-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
