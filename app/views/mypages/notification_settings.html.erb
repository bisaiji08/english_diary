<h1><%= t('mypages.notification_settings.title') %></h1>

<p>
  <%= t('mypages.notification_settings.current_status') %>
  <% if @notifications_enabled %>
    <span style="color: green;"><%= t('mypages.notification_settings.enabled') %></span>
  <% else %>
    <span style="color: red;"><%= t('mypages.notification_settings.disabled') %></span>
  <% end %>
</p>

<p>
  <%= t('mypages.notification_settings.time_zone', time_zone: Time.zone.name) %>
</p>

<%= form_with model: current_user, url: update_notification_settings_path, method: :patch, local: true do |f| %>
  <div>
    <%= f.label :notifications_enabled, t('mypages.notification_settings.enable_label') %>
    <%= f.radio_button :notifications_enabled, 'true', id: "enable-notifications" %>
    <%= f.label :notifications_enabled, t('mypages.notification_settings.yes'), for: "enable-notifications" %>

    <%= f.radio_button :notifications_enabled, 'false', id: "disable-notifications" %>
    <%= f.label :notifications_enabled, t('mypages.notification_settings.no'), for: "disable-notifications" %>
  </div>
  <div>
    <%= f.label :notification_time, t('mypages.notification_settings.time_label') %>
    <%= f.time_select :notification_time, default: @notification_time || Time.now, minute_step: 5 %>
  </div>
  <div>
    <%= f.submit t('mypages.notification_settings.save_button') %>
  </div>
<% end %>
