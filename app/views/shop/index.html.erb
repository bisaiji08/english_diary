<h1>Shop</h1>
<p>Your points: <%= current_user.tree.points %></p>

<h2>Japanese Fonts</h2>
<% if @japanese_fonts.any? %>
  <ul>
    <% @japanese_fonts.each do |font| %>
      <li>
        <strong><%= link_to font.name, shop_path(font) %></strong> - <%= font.price %> points
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No Japanese fonts available for purchase.</p>
<% end %>

<h2>English Fonts</h2>
<% if @english_fonts.any? %>
