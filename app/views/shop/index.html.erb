    <% @english_fonts.each do |font| %>
      <li>
        <strong><%= link_to font.name, shop_path(font) %></strong> - <%= font.price %> points
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No English fonts available for purchase.</p>
<% end %>
