<h1 class="shop-title"><%= t('shop.index.title') %></h1>
<p class="shop-points"><%= t('shop.index.your_points', points: current_user.tree.points) %></p>

<div class="shop-container">
  <div class="font-panel">
    <h2><%= t('shop.index.japanese_fonts_title') %></h2>
    <% if @japanese_fonts.any? %>
      <div class="font-grid">
        <% @japanese_fonts.each do |font| %>
          <div class="font-card">
            <strong><%= link_to font.name, shop_path(font) %></strong>
            <p><%= t('shop.index.font_price', price: font.price) %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p><%= t('shop.index.no_japanese_fonts') %></p>
    <% end %>
  </div>

  <div class="font-panel">
    <h2><%= t('shop.index.english_fonts_title') %></h2>
    <% if @english_fonts.any? %>
      <div class="font-grid">
        <% @english_fonts.each do |font| %>
          <div class="font-card">
            <strong><%= link_to font.name, shop_path(font) %></strong>
            <p><%= t('shop.index.font_price', price: font.price) %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <p><%= t('shop.index.no_english_fonts') %></p>
    <% end %>
  </div>
</div>

